{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "src",
    "strict": true,
    "outDir": "../../public/client-v2/dist"
  },
  "exclude": [
    "node_modules",
    "config",
    "scripts"
  ]
}
