{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "baseUrl": "src",
    "strict": true,
    "outDir": "../../public/client-v2/dist",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "config",
    "scripts"
  ]
}
